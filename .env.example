# ========================================
# ENTERPRISE AI AGENT - CONFIGURATION
# ========================================

# === CORE AI PROVIDERS ===
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-pro

# Cohere
COHERE_API_KEY=your_cohere_api_key_here

# === VECTOR DATABASES ===
# ChromaDB (local)
CHROMA_PERSIST_DIRECTORY=./memory_store/chroma_db

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=ai-agent-memory

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# === TRADITIONAL DATABASES ===
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_agent_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=ai_agent_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# SQLite (fallback)
DATABASE_URL=sqlite:///./agent_memory.db

# === SECOND BRAIN / KNOWLEDGE MANAGEMENT ===
# Notion
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id

# Obsidian
OBSIDIAN_VAULT_PATH=/path/to/obsidian/vault

# === DEV ENVIRONMENT INTEGRATION ===
# GitHub
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_USERNAME=your_github_username
GITHUB_REPO=your-repo-name

# Docker
DOCKER_HOST=unix:///var/run/docker.sock

# Kubernetes
KUBERNETES_CONTEXT=default
KUBERNETES_NAMESPACE=ai-agent

# === MONITORING & OBSERVABILITY ===
# Weights & Biases
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=ai-agent-monitoring

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# === CI/CD ===
# Buildkite
BUILDKITE_API_TOKEN=your_buildkite_api_token
BUILDKITE_ORGANIZATION_SLUG=your-org-slug

# === MESSAGE QUEUES ===
# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# === APPLICATION SETTINGS ===
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=True

# Memory Configuration
MEMORY_CONSOLIDATION_INTERVAL=3600  # seconds
MAX_SHORT_TERM_MEMORIES=100
IMPORTANCE_THRESHOLD=0.7

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.75
EMBEDDING_MODEL=all-MiniLM-L6-v2

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Session Management
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SESSIONS=100
